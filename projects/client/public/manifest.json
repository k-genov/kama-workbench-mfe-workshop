{
  "name": "Client App",
  "baseUrl": "#",
  "capabilities": [
    {
      "type": "activator",
      "private": false,
      "properties": {
        "path": "activator"
      }
    },

    {
      "type": "part",
      "qualifier": {
        "part": "devtools",
        "perspective": "perspective-1"
      },
      "properties": {
        "views": [
          {
            "qualifier": {
              "component": "devtools",
              "vendor": "scion"
            }
          }
        ],
        "extras": {
          "icon": "code",
          "label": "Dev"
        },
        "showSplash": true
      }
    },

    {
      "type": "part",
      "qualifier": {
        "part": "main-area",
        "perspective": "perspective-1"
      },
      "properties": {
        "path": "desktop",
        "showSplash": true
      }
    },

    {
      "type": "part",
      "qualifier": {
        "part": "projects",
        "perspective": "perspective-1"
      },
      "properties": {
        "extras": {
          "icon": "folder",
          "label": "Projects"
        },
        "path": "projects",
        "showSplash": true
      }
    },

    {
      "type": "perspective",
      "qualifier": {
        "perspective": "perspective-1"
      },
      "private": false,
      "properties": {
        "data": {
          "label": "Perspective 1"
        },
        "parts": [
          {
            "id": "main-area",
            "qualifier": {
              "part": "main-area",
              "perspective": "perspective-1"
            }
          },
          {
            "id": "devtools",
            "qualifier": {
              "part": "devtools",
              "perspective": "perspective-1"
            },
            "position": "bottom-left"
          },
          {
            "id": "projects",
            "qualifier": {
              "part": "projects",
              "perspective": "perspective-1"
            },
            "position": "left-top"
          }
        ]
      }
    },

    {
      "type": "view",
      "qualifier": {
        "component": "project"
      },
      "params": [
        {
          "name": "id",
          "required": true
        }
      ],
      "properties": {
        "path": "project",
        "title": ":title",
        "resolve": {
          "title": "projects/:id/title"
        },
        "showSplash": true
      }
    },

    {
      "type": "dialog",
      "qualifier": {
        "component": "dialog"
      },
      "params": [
        {
          "name": "id",
          "required": true
        }
      ],
      "properties": {
        "path": "dialog",
        "size": {
          "width": "300px",
          "height": "300px"
        },
        "title": ":title",
        "resolve": {
          "title": "projects/:id/title"
        },
        "showSplash": true
      }
    },

    {
      "type": "popup",
      "qualifier": {
        "component": "popup"
      },

      "properties": {
        "path": "popup",
        "showSplash": true
      }
    }
  ],
  "intentions": [
    {
      "type": "view",
      "qualifier": {
        "component": "devtools",
        "vendor": "scion"
      }
    },

    {
      "type": "messagebox"
    },

    {
      "type": "notification"
    }
  ]
}
